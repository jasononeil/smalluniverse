{
  "name": "smalluniverse",
  "version": "0.0.1",
  "description": "A web framework for small universal (client+server) apps",
  "main": "index.js",
  "repository": "https://github.com/jasononeil/smalluniverse",
  "author": "Jason O'Neil",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "example/"
  ],
  "scripts": {
    "postinstall": "lix download",
    "formatter": "node `(yarn -s haxelib path formatter | sed 1q)`/../run.js",
    "format": "yarn -s formatter -s src && yarn -s formatter -s example",
    "test": "yarn -s test:build && yarn -s test:run",
    "test:build": "haxe test.hxml",
    "test:run": "node build/test.bundle.js",
    "example": "yarn -s example:build && yarn -s example:start",
    "example:build": "haxe --connect 6000 example.hxml & haxe --connect 6000 example_client.hxml",
    "example:start": "node build/server.bundle.js",
    "dev": "yarn -s dev:haxeDevServer & yarn -s dev:nodemon",
    "dev:nodemon": "nodemon --watch src --watch example --ext hx,hxml,html,css --exec \"yarn -s example\"",
    "dev:haxeDevServer": "haxe -v --wait 6000"
  },
  "dependencies": {
    "snabbdom": "^2.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.8.34",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "lix": "^15.11.4",
    "nodemon": "^2.0.7",
    "snabbdom-testing-library": "^0.0.1"
  }
}
