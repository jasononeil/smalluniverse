{
  "name": "smalluniverse",
  "version": "0.0.1",
  "description": "A web framework for small universal (client+server) apps",
  "main": "index.js",
  "repository": "https://github.com/jasononeil/smalluniverse",
  "author": "Jason O'Neil",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "example/"
  ],
  "scripts": {
    "test": "yarn -s test:build && yarn -s test:run",
    "test:build": "haxe test.hxml",
    "test:run": "node build/test.js",
    "example": "yarn -s example:build && yarn -s example:start",
    "example:build": "haxe example.hxml",
    "example:start": "node build/server.js",
    "dev": "nodemon --watch src --watch example --ext hx,hxml,css --exec \"yarn -s example\""
  },
  "dependencies": {
    "lix": "^15.9.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
